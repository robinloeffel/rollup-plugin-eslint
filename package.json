{
  "name": "@rbnlffl/rollup-plugin-eslint",
  "version": "5.0.0",
  "description": "Lint your Rollup bundles with ESLint. üêù",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": "https://github.com/robinloeffel/rollup-plugin-eslint.git",
  "homepage": "https://github.com/robinloeffel/rollup-plugin-eslint",
  "bugs": "https://github.com/robinloeffel/rollup-plugin-eslint/issues",
  "author": "Robin L√∂ffel (https://robinloeffel.ch) <hi@robinloeffel.ch>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "source",
    "dist"
  ],
  "keywords": [
    "rollup",
    "plugin",
    "rollup-plugin",
    "eslint"
  ],
  "dependencies": {
    "@rollup/pluginutils": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/eslint": "^8.21.2",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-sweet": "^11.0.0",
    "husky": "^8.0.3",
    "rollup": "^3.19.1",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "eslint": "^8.36.0",
    "rollup": "^3.19.1"
  },
  "scripts": {
    "start": "yarn build && yarn watch",
    "build": "rm -rf dist && tsc",
    "test": "rollup -c ./test/rollup.config.js",
    "watch": "concurrently 'yarn watch:source' 'yarn watch:test'",
    "watch:source": "chokidar 'source/**/*' -c 'yarn build'",
    "watch:test": "chokidar 'test/**/*' -c 'yarn test'"
  }
}
